apiVersion: apps/v1
kind: Deployment
metadata:
  name: stocks-stats
spec:
  replicas: 1
  selector:
    matchLabels:
      app: stocks-stats
  template:
    metadata:
      labels:
        app: stocks-stats
    spec:
      containers:
      - name: stocks-stats
        image: gcr.io/PROJECT_ID/stocks-stats:1.0.2-GITHUB_SHA
        env:
        - name: DATABASE_URL
          valueFrom:
            secretKeyRef:
              name: stocks-stats-secrets
              key: DATABASE_URL
        - name: DATABASE_USERNAME
          valueFrom:
            secretKeyRef:
              name: stocks-stats-secrets
              key: DATABASE_USERNAME
        - name: DATABASE_PASSWORD
          valueFrom:
            secretKeyRef:
              name: stocks-stats-secrets
              key: DATABASE_PASSWORD
        - name: N_THREADS
          valueFrom:
            secretKeyRef:
              name: stocks-stats-secrets
              key: N_THREADS
        - name: REDDIT_API_KEY
          valueFrom:
            secretKeyRef:
              name: stocks-stats-secrets
              key: REDDIT_API_KEY
        - name: REDDIT_SECRET_KEY
          valueFrom:
            secretKeyRef:
              name: stocks-stats-secrets
              key: REDDIT_SECRET_KEY